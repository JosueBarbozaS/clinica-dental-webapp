@model AppWebClinica.Models.Cita

@{
    ViewData["Title"] = "Editar Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="m-0">
                        <i class="fas fa-edit me-2"></i>Editar Cita
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" id="Edit-form" data-availability-url="@Url.Action("CheckAvailability", "Citas")">
                        >

                        <input asp-for="Id" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Cedula" class="form-control" readonly />
                                    <label asp-for="Cedula">Cédula</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Nombre" class="form-control" />
                                    <label asp-for="Nombre">Nombre Completo</label>
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" class="form-control" />
                                    <label asp-for="Email">Correo Electrónico</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="FechaHora" type="datetime-local" class="form-control" id="FechaHora" />
                                    <label asp-for="FechaHora">Fecha y Hora</label>
                                    <span asp-validation-for="FechaHora" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="Procedimiento" class="form-select">
                                        <option>Limpieza</option>
                                        <option>Calzas</option>
                                        <option>Extracciones</option>
                                        <option>Blanqueamiento</option>
                                        <option>Ortodoncia</option>
                                    </select>
                                    <label asp-for="Procedimiento">Procedimiento</label>
                                    <span asp-validation-for="Procedimiento" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light mb-3">
                                    <div class="card-body">
                                        <h6 class="card-title">Detalles Financieros</h6>
                                        <div class="row">
                                            <div class="col-6">
                                                <small class="text-muted">Precio:</small>
                                                <input asp-for="Precio" class="form-control-plaintext" readonly />
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Impuesto (13%):</small>
                                                <input asp-for="Impuesto" class="form-control-plaintext" readonly />
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Total:</small>
                                                <input asp-for="Total" class="form-control-plaintext" readonly />
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Adelanto:</small>
                                                <input asp-for="Adelanto" class="form-control-plaintext" readonly />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Volver
                            </a>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalConfirmar">
                                <i class="fas fa-save me-2"></i>Guardar Cambios
                            </button>
                        </div>

                        <!-- Modal de Confirmación -->
                        <div class="modal fade" id="ModalConfirmar" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header bg-primary text-white">
                                        <h5 class="modal-title">
                                            <i class="fas fa-question-circle me-2"></i>Confirmar Edición
                                        </h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body text-center">
                                        <p>¿Está seguro que desea editar la cita de <strong>@Model.Nombre</strong>?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                            <i class="fas fa-times me-2"></i>Cancelar
                                        </button>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-check me-2"></i>Confirmar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}